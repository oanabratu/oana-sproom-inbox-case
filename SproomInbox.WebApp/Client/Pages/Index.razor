@page "/"
@using SproomInbox.Shared
@inject HttpClient Http

<PageTitle>Sproom Inbox</PageTitle>

<h1>Sproom Inbox</h1>

@if (documents != null)
{
    <p>Welcome to your inbox! You have @documents.Count documents</p>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Type</th>
                <th>State</th>
                <th>FileReference</th>
                <th>Date</th>
                <th></th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var document in documents)
            {
                <tr>
                    <td><input type="checkbox" @bind="@document.Selected"></td>
                    <td>@document.Id</td>
                    <td>@document.DocumentType</td>
                    <td>@document.State</td>
                    <td>@document.FileReference</td>
                    <td>@document.CreationDate.ToShortDateString()</td>
                    <td>
                        <a href="@($"documentHistory/{@document.Id}")" class="btn btn-primary table-btn">
                            History
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} 
else {
    <p><em>Loading...</em></p>
}

@code {
    private IList<DocumentModel>? documents;

    protected override async Task OnInitializedAsync()
    {
        documents = await Http.GetFromJsonAsync<IList<DocumentModel>>("Document");
    }
}
